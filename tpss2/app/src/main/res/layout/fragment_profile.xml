<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="Маса(кг)" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Ріст (см)" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/height"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Вік" />

    <TextView
        android:id="@+id/physic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sex"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Фізична активність" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Cтать" />

    <Button
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="РОЗРАХУВАТИ" />

    <EditText
        android:id="@+id/weighte"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:ems="3"
        android:inputType="numberSigned"
        android:text="60" />

    <EditText
        android:id="@+id/heighte"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/weight"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:ems="3"
        android:inputType="numberSigned"
        android:text="170" />

    <EditText
        android:id="@+id/agee"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/heighte"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:ems="3"
        android:inputType="numberSigned"
        android:text="17" />

    <RadioButton
        android:id="@+id/sex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agee"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:text="Ч" />

    <RadioButton
        android:id="@+id/sex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agee"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="Ж" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:text="TextView" />

</RelativeLayout>